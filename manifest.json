{
    "manifest_version": 2,

    "name": "markdown clipboard",
    "description": "copy content with md url format",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "js": ["content_script.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],

    "browser_action": {
        "default_title": "ClipBoard With Url!",
        "default_icon": "markdown.png"
    },

    "icons": {
        "128": "markdown.png",
        "16": "markdown.png",
        "48": "markdown.png"
    },

    "commands": {
        "base": {
            "description": "ClipBoard Copy",
            "suggested_key": {
                "default": "Alt+Shift+C",
                "mac": "Alt+Shift+C"
            }
        }
    },

    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}